<div class="jumbotron">

  <div class="container" id="movie-show">
    <h1><%= @movie.title %></h1>
    <div id="movie-image">
      <%= image_tag("#{@movie.movie_poster_url}") %>
    </div>
    <div id="movie-info">
      <h3>Synopsis</h3>
      <p><%= @movie.synopsis %></p>
      <br>
      <h3>Cast</h3>
      <% @movie.actors.each do |actor| %>
        <p> <%= link_to(actor.name, "/actors/#{actor.id}") %> </p>
      <% end %>
    </div>
</div>

<div class="jumbotron review-container">
  <div class="container shadow">
  <p>Write a review</p>
    <div class="rating=form">
      <%= form_for :review, url: '/reviews', html: {id: "rating-form"} do |f| %>
      <% i = 1 %>
      <% 5.times do %>
        <div class="rate-e-o-active">
          <%= image_tag("/images/radioactive-no-color.png", size: "50")%>
          <%= f.radio_button :rating, "#{i}" %>
        </div>
      <% i += 1 %>
      <% end %>
      <%= f.text_field :title, placeholder: "title..." %>
      <%= f.text_area :content, placeholder: "Write your review...", cols: "50", rows: "5" %>
      <input type="hidden" name="review[reviewable_id]" value=<%= @movie.id %>>
      <input type="hidden" name="review[reviewable_type]" value="Movie">
      <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>

<div class="jumbotron reviews-display">

  <div class="container reviews shadow">
    <% @movie.reviews.each do |review| %>
    <div class="review-card shadow">
      <h4><%= review.title %>
      <%= render partial: "/partials/five_star_rating", locals: { rating: review.rating, size: "20"} %>
      </h4>
      <p><%= review.content %></p>
    </div>
    <% end %>
  </div>

</div>
